{
  "name": "IPvGreen",
  "manifest_version": 2,
  "version": "1.00",
  "minimum_chrome_version": "26",
  "description": "A modification of the IPvFoo project to additionally show a sustainability or waste icon depending on the AWS region's reported sustainability.",
  "homepage_url": "https://github.com/steve-sienk/ipvfoo",
  "icons": {
    "64": "noun_eco_unknown_64.png"
  },
  "background": {
    "scripts": [ "common.js", "background.js" ]
  },
  "page_action": {
    "dummy": ""
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "https://ip-ranges.amazonaws.com/*",
    "<all_urls>"
  ],
  "applications": {
      "gecko": {
          "id": "sienk@sienk.net"
      }
  }
}
